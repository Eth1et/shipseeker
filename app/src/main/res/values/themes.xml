<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="WhiteBtn" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/gold</item>
    </style>
</resources>